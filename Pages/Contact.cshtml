@page
@model Carlos_Pizza.Pages.Contact
@* LeafletJS setup for interactive map (Agafonkin, 2023) *@
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""/>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>
@* end of adapted code *@
@{
    ViewData["Title"] = "Contact";
}
<!DOCTYPE html>

<html>
<head>
    <title>About Us</title>
</head>
<body>
<h2>Where to find us</h2>
<div id="map"> @* using a map of pinned at Unikebab and Pizza from an OpenStreetMap contributer (Venables, 2024) *@
    <noscript> @* use a static map if there's no javacript *@
        <img src="https://staticmap.openstreetmap.org/staticmap.php?center=53.196100,-2.898347&zoom=13&size=600x400&maptype=mapnik" alt="Static Map"/>
    </noscript>
    <script> @* LeafletJS Script (Agafonkin, 2023) *@
        var map = L.map('map').setView([53.196100, -2.898347], 17);

        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        L.marker([53.196100, -2.898347]).addTo(map)
    </script> @*end of adapted code*@
</div>
<hr/>
<h2>Contact Us</h2>
<form action="" method="post">
    <label for="name">Name:</label> <br/>
    <input type="text" id="name" name="name" required> <br/>
    <label for="email">Email:</label> <br/>
    <input type="email" id="email" name="email" required> <br/>
    <label for="message">Message:</label> <br/>
    <textarea id="message" name="message" rows="4" required minlength="10"></textarea> <br/>

    <button type="submit">Submit</button>
</form>

</body>
</html>